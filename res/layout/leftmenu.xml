<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/left_menu_center"
        android:layout_width="240dip"
        android:layout_height="140dip"
        android:orientation="horizontal" >

        <com.buct.base.CircleImageView
            android:id="@+id/head_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/headimage" />

        <TextView
            android:id="@+id/person_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="50dp"
            android:text="个人中心"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/home"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="1.0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text=" 首         页"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <TextView
        android:id="@+id/home1"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="1.0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="打印店铺"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <TextView
        android:id="@+id/home2"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="1.0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="我的印单"
        android:textColor="#000000"
        android:textSize="20sp" />

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <TextView
        android:id="@+id/home3"
        android:layout_width="240dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/ic_home"
        android:drawablePadding="1.0dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:text="我的收藏"
        android:textColor="#000000"
        android:textSize="20sp" />
    <!--
           <View
        	  android:layout_width="240dip"
        	  android:layout_height="2.0dip"
              android:background="@drawable/ic_shelf_category_divider" />
           
           <TextView 
              android:id="@+id/home4"
              android:layout_width="240dp"
              android:layout_height="50dp"
              android:drawableLeft="@drawable/ic_home"
              android:drawablePadding="1.0dp"
              android:gravity="center_vertical"
              android:paddingLeft="15dp"
              android:paddingRight="10dp"
              android:textColor="#000000"
              android:text="我的收藏"
              android:textSize="20sp"
              />
    -->

    <View
        android:layout_width="240dip"
        android:layout_height="2.0dip"
        android:background="@drawable/ic_shelf_category_divider" />

    <RelativeLayout
        android:layout_width="240dip"
        android:layout_height="fill_parent"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/set"
            android:layout_width="240dip"
            android:layout_height="50dip"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_home"
            android:drawablePadding="1.0dip"
            android:gravity="center_vertical"
            android:paddingLeft="15.0dip"
            android:text="设置"
            android:textColor="#ffffffff"
            android:textSize="15.0sp" />
    </RelativeLayout>

</LinearLayout>